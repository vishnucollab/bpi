<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "com.simb.Blueprint"
        version = "1.29">
    <name>Blueprint</name>

    <description>
        Conduct onsite buidling inspections with Blueprint and produce beautiful reports that your clients will love.
    </description>

    <author href="http://www.simb.com.au" email="andy@simb.com.au">
        SIMB Digital Developers
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="3.7.0" />
    <preference name="orientation" value="landscape" />
    <preference name="target-device" value="tablet" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    
    <gap:plugin name="org.apache.cordova.battery-status" />
