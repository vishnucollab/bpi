<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
    id = "com.simb.BlueprintQLD"
        version = "2.1.15">
    <name>Blueprint QLD</name>

    <description>
        Conduct onsite buidling inspections with Blueprint and produce beautiful reports that your clients will love.
    </description>

    <author href="http://www.simb.com.au" email="dev3@simb.com.au">
        SIMB Digital Developers
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="cli-6.5.0" />
    <preference name='pgb-builder-version' value='1' />
    <preference name="orientation" value="landscape" />
    <preference name="target-device" value="tablet" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="AutoHideSplashScreen" value="true"/>
    <feature name="CDVWKWebViewEngine">
        <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    <engine name="ios" spec="^4.5.3" />

    <gap:plugin name="cordova-plugin-battery-status" source="npm" spec="1.2.4"/>
    <gap:plugin name="cordova-plugin-ios-camera-permissions" source="npm" spec="1.2.0"/>
    <gap:plugin name="cordova-plugin-camera" source="npm" spec="2.4.1"/>
    <gap:plugin name="cordova-plugin-media" source="npm" spec="3.0.1"/>
    <gap:plugin name="cordova-plugin-media-capture" source="npm" spec="1.4.3"/>
    <gap:plugin name="cordova-plugin-console" source="npm" spec="1.0.7"/>
    <gap:plugin name="cordova-plugin-contacts" source="npm" spec="2.3.1"/>
    <gap:plugin name="cordova-plugin-device" source="npm" spec="1.1.6"/>
    <gap:plugin name="cordova-plugin-dialogs" source="npm" spec="1.3.3"/>
    <gap:plugin name="cordova-plugin-file-transfer" source="npm" spec="1.6.3"/>
    <gap:plugin name="cordova-plugin-geolocation" source="npm" spec="2.4.3"/>
    <gap:plugin name="cordova-plugin-globalization" source="npm" spec="1.0.7"/>
    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" spec="1.7.1"/>
    <gap:plugin name="cordova-plugin-network-information" source="npm" spec="1.3.3"/>
    <gap:plugin name="cordova-plugin-splashscreen" source="npm" spec="4.0.3"/>
    <gap:plugin name="cordova-plugin-vibration" source="npm" spec="2.1.5"/>
    <gap:plugin name="cordova-plugin-statusbar" source="npm" spec="2.2.3"/>
    <gap:plugin name="cordova-plugin-file-opener2" source="npm" spec="2.0.19"/>
    <gap:plugin name="cordova-plugin-sqlite-2" source="npm" spec="1.0.4"/>
    <gap:plugin name="cordova-plugin-wkwebview-engine" source="npm" spec="1.1.4"/>
    
    <gap:config-file platform="ios" parent="UIStatusBarHidden">
        <true/>
    </gap:config-file>
    
    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
        <false/>
    </gap:config-file>
    <access origin="*" />        

    <icon src="icon.png" />
    <icon src="res/icon/ios/icon-48.png" gap:platform="ios" width="48" height="48" />
    <icon src="res/icon/ios/icon-57.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/icon/ios/icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="res/icon/ios/icon-70.png" gap:platform="ios" width="70" height="70" />
    <icon src="res/icon/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="res/icon/ios/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="res/icon/ios/icon-96.png" gap:platform="ios" width="96" height="96" />
    <icon src="res/icon/ios/icon-114.png" gap:platform="ios" width="114" height="114" />
    <icon src="res/icon/ios/icon-120.png" gap:platform="ios" width="120" height="120" />
    <icon src="res/icon/ios/icon-144.png" gap:platform="ios" width="144" height="144" />
    <icon src="res/icon/ios/icon-150.png" gap:platform="ios" width="150" height="150" />
    <icon src="res/icon/ios/icon-152.png" gap:platform="ios" width="152" height="152" />
    <icon src="res/icon/ios/icon-180.png" gap:platform="ios" width="180" height="180" />
    <icon src="res/icon/ios/icon-192.png" gap:platform="ios" width="192" height="192" />
    <icon src="res/icon/ios/icon-310.png" gap:platform="ios" width="310" height="310" />
